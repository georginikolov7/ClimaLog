<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:ClimaLog_App_MAUI.Models.Interfaces"
             xmlns:viewmodel="clr-namespace:ClimaLog_App_MAUI.ViewModels"
             x:Class="ClimaLog_App_MAUI.View.SettingsPage"
             x:DataType="viewmodel:SettingsViewModel"
             Title="SettingsPage">
    <VerticalStackLayout>
        <Label 
            Text="WORK IN PROGRESS"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Connect" Command="{Binding ConnectToBleDeviceCommand}"/>
    </VerticalStackLayout>
</ContentPage>